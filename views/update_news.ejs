<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Podcasts</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Podcasts</h2>
           
        </div>

         <!-- form handling -->
 <form method="POST" id="update_news">
    <div class="new_news">
        <div class="form-group">
            <label for="name" class="text-light">Heading</label>
            <input type="hidden" name="id" value="<%= user._id %>">    
            <input type="text" name="name" value="<%= user.name %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="content" class="text-light">Description</label>
            <input type="text" name="content" value="<%= user.content%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="imagelink" class="text-light">Image Link</label>
            <input type="text" name="imagelink" value="<%= user.imagelink%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="type" class="text-light">Type</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="type" value="Tapes By FinBits" <%= user.type == 'Tapes By FinBits' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Tapes By FinBits</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="type" value="FinBits Originals"  <%= user.trending == 'FinBits Originals' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">FinBits Originals</label>
            </div>
        </div>
        <div class="form-group">
            <label for="length" class="text-light">Length</label>
            <input type="text" name="length" value="<%= user.length%>" placeholder="1 min">
        </div>
        <div class="form-group">
            <label for="date" class="text-light">Date</label>
            <input type="text" name="date" value="<%= user.date%>" placeholder="01 Jan, 2021">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->