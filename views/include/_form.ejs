 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_news">
    <div class="new_news">
        <div class="form-group">
            <label for="name" class="text-light">Heading</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="content" class="text-light">Description</label>
            <input type="text" name="content" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="imagelink" class="text-light">Image Link</label>
            <input type="text" name="imagelink" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="url" class="text-light">URL</label>
            <input type="text" name="url" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="type" class="text-light">Type</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="type" value="Tapes By FinBits" >
                <label for="radio-2" class="radio-label">Tapes By FinBits</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="type" value="FinBits Originals" >
                <label for="radio-3" class="radio-label">FinBits Originals</label>
            </div>
        </div>
        <div class="form-group">
            <label for="length" class="text-light">Length</label>
            <input type="text" name="length" value="" placeholder="1 min">
        </div>
        <div class="form-group">
            <label for="date" class="text-light">Date</label>
            <input type="text" name="date" value="" placeholder="01 Jan, 2021">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>